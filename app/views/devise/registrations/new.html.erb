<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="container-fluid">
  <%= render 'devise/shared/error_messages' if flash[:alert] %>
  <div class="row pb-2">
    <div class="col-12">
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1">
            <i class="far fa-envelope"></i>
          </span>
        </div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row pt-2 pb-2">
    <div class="col-12">
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1">
            <i class="fas fa-key"></i>
          </span>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (min. #{@minimum_password_length} chars)", class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row pt-2 pb-2">
    <div class="col-12">
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1">
            <i class="fas fa-check"></i>
          </span>
        </div>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirm password', class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row pt-2">
    <div class="col-12">
      <div class="actions">
        <%= f.submit "Submit", class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
  <div class="row pt-2">
    <div class="col-12">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
<% end %>